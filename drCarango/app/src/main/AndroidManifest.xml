<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="doutor.carangoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.IntroducaoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".gui.LoginActivity"
            android:label="@string/label_login"
            android:parentActivityName=".gui.IntroducaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".gui.CadastroActivity"
            android:label="@string/label_cadastro"
            android:parentActivityName=".gui.IntroducaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".gui.SugestoesActivity"
            android:label="@string/label_menu"
            android:parentActivityName=".gui.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.ListaOficinasActivity"
            android:parentActivityName=".gui.SugestoesActivity" />
        <activity
            android:name=".gui.PerfilOficinaActivity"
            android:parentActivityName=".gui.ListaOficinasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".gui.UsuarioPerfilActivity"
            />

    </application>

</manifest>