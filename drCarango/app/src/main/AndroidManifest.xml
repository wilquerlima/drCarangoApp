<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="doutor.carangoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.IntroducaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.LoginActivity"
            android:label="@string/label_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".gui.CadastroActivity"
            android:label="@string/label_cadastro"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".gui.RecuperarSenhaActivity"
            android:label="@string/label_recuperar_senha"
            android:parentActivityName=".gui.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".gui.SugestoesActivity"
            android:label="@string/label_menu"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".gui.ListaOficinasActivity"
            android:parentActivityName=".gui.SugestoesActivity" />
        <activity
            android:name=".gui.PerfilOficinaActivity"
            android:parentActivityName=".gui.ListaOficinasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".gui.PrefilUsuarioActivity"
            />
        <activity android:name=".gui.EditarPromocoes"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".gui.PerfilUsuarioOficinaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".gui.AvaliacaoComentarioActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".gui.AvaliacaoQualidadeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".gui.AvalicaoAgilidadeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".gui.AvaliacaoCustoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>